<!DOCTYPE html>
<html class="h-100 w-100">
<head>
  <title>MIBL Manager</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', :media => 'all', :'data-turbolinks-track' => 'reload' %>
  <%= javascript_pack_tag 'application', :'data-turbolinks-track' => 'reload' %>
</head>

<body class="bg-light h-100 w-100">
<nav class="navbar navbar-dark bg-dark navbar-expand">
  <a class="navbar-brand" href="/">MIBL Manager</a>
  <div class="navbar-nav d-flex flex-between">
    <%= link_to('Account', edit_user_registration_path, class: "nav-item nav-link") %>
    <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "nav-item nav-link") %>
  </div>
</nav>
<div class="container mt-2">
  <% if notice %>
    <div class="alert alert-secondary" role="alert"><%= notice %></div>
  <% end %>
  <% if alert %>
    <div class="alert alert-info" role="alert"><%= alert %></div>
  <% end %>
  <%= yield %>
</div>
</body>
</html>
